<?xml version="1.0" encoding="UTF-8"?>
<actions>
        <action>
            <actionName>run</actionName>
            <packagings>
                <packaging>jar</packaging>
            </packagings>
            <goals>
                <goal>spring-boot:run</goal>
            </goals>
            <properties>
                <run.jvmArguments>-noverify -XX:TieredStopAtLevel=1</run.jvmArguments>
                <Env.SPRING_OUTPUT_ANSI_ENABLED>always</Env.SPRING_OUTPUT_ANSI_ENABLED>
                <run.mainClass>com.tineda.tienda.TiendaApplication</run.mainClass>
            </properties>
        </action>
        <action>
            <actionName>debug</actionName>
            <packagings>
                <packaging>jar</packaging>
            </packagings>
            <goals>
                <goal>spring-boot:run</goal>
            </goals>
            <properties>
                <Env.SPRING_OUTPUT_ANSI_ENABLED>always</Env.SPRING_OUTPUT_ANSI_ENABLED>
                <jpda.listen>true</jpda.listen>
                <run.mainClass>com.tineda.tienda.TiendaApplication</run.mainClass>
            </properties>
        </action>
        <action>
            <actionName>profile</actionName>
            <packagings>
                <packaging>jar</packaging>
            </packagings>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:1.2.1:exec</goal>
            </goals>
            <properties>
                <exec.args>-classpath %classpath com.tineda.tienda.TiendaApplication</exec.args>
                <exec.executable>java</exec.executable>
            </properties>
        </action>
    </actions>
